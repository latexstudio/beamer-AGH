\RequirePackage{tikz}
\usetikzlibrary{positioning}
\mode<presentation>
\useinnertheme[shadow=true]{rounded}
\useoutertheme{infolines}
\usecolortheme{AGH}
\AtBeginDocument{%
	\typeout{..................................................................}
	\typeout{You are using the AGH beamer theme created by Stanislaw Polak}
	\typeout{Version: 1.0, Jan 2017}
	\typeout{..................................................................}
}

%Background images
\setbeamertemplate{background}{
	\ifnum\thepage=1
		\tikz[overlay, remember picture] \node[below right=\headheight and -1em of current page.north west]{\includegraphics[height=\textheight,keepaspectratio=true]{AGH-title}};
        \else
		\tikz[overlay, remember picture] \node[below right=3.5\headheight and -0.5em of current page.north west]{\includegraphics[height=\textheight,keepaspectratio=true]{AGH-slide}};
        \fi
}
%Slide content margins
\setbeamersize{text margin left=6em} 
\setbeamersize{text margin right=2em}
%Title page
\defbeamertemplate*{title page}{AGH}[1][]
{
  \vspace*{0.15\paperheight}
  \vbox{}
    \vfill
  \hspace*{0.01\paperwidth}
  \begingroup
  \centering
  \begin{beamercolorbox}[rounded=true,shadow=true,sep=8pt,wd=0.6\textwidth,center,#1]{title}
    \usebeamerfont{title}\inserttitle\par%
    \ifx\insertsubtitle\@empty%
    \else%
      \vskip0.25em%
      {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
    \fi%     
  \end{beamercolorbox}%
  \vskip1em\par
  \begin{beamercolorbox}[sep=8pt,center,#1]{author}
    \usebeamerfont{author}\insertauthor
  \end{beamercolorbox}
  \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
    \usebeamerfont{institute}\insertinstitute
  \end{beamercolorbox}
  \begin{beamercolorbox}[sep=8pt,center,#1]{date}
    \usebeamerfont{date}\insertdate
  \end{beamercolorbox}\vskip0.5em
  {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \endgroup
  \vfill
}
